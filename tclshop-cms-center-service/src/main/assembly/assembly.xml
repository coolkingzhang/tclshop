		<fileSet>
			<directory>src/main/assembly/resources</directory>
			<outputDirectory>resources</outputDirectory>
			<fileMode>0644</fileMode>
		</fileSet>
	</fileSets> 
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>